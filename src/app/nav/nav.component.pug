mat-sidenav-container.sidenav-container
    mat-sidenav.sidenav(ref-drawer, fixedInViewport="true", [attr.role]="(isHandset$ | async) ? 'dialog' : 'navigation'", [mode]="(isHandset$ | async) ? 'over' : 'side'", [opened]="!(isHandset$ | async)")
        mat-toolbar Menu
        mat-nav-list
            a(mat-list-item, routerLink="/main-d3") MainD3
    mat-sidenav-content
        mat-toolbar(color="primary")
            button(type="button", aria-label="Toggle sidenav", mat-icon-button, (click)="drawer.toggle()", *ngIf="isHandset$ | async")
                mat-icon(aria-label="Side nav toggle icon") menu
            span angular-d3js
        router-outlet
